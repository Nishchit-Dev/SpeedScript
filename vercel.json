{
  "build": {
    "env": {
      "NPM_FLAGS": "--legacy-peer-deps"
    }
  },
  "functions": {
    "api/cronjob.ts": {
      "runtime": "nodejs16.x"
    }
  },
  "cron": {
    "jobs": [
      {
        "path": "/api/cronjob",
        "schedule": "*/5 * * * *",
        "headers": {
          "Authorization": "Bearer ${CRONJOB_APIKEY}"
        }
      }
    ]
  }
}